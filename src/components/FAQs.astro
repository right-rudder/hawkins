---
const { pageContent } = Astro.props;

let activeIndex = -1
function toggle(index) {
  activeIndex = activeIndex === index ? -1 : index
}
---

<div class="bg-white">
  <div class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:px-8 lg:py-40">
    <div class="mx-auto max-w-4xl">
      <h2 class="text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl">{pageContent.title}</h2>
      <dl class="mt-16 divide-y divide-gray-900/10" id="faq-list">
        {pageContent.questions.map((faq, index) => (
          <div class="py-6 first:pt-0 last:pb-0">
            <button
              type="button"
              class="group w-full text-left text-gray-900 transition-colors duration-200"
              data-index={index}
            >
              <dt class="flex w-full items-start justify-between">
                <span class="text-base font-semibold">{faq.question}</span>
                <span class="ml-6 flex h-7 items-center">
                  <svg class="size-6 plus-icon group-[.open]:hidden" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6" />
                  </svg>
                  <svg class="size-6 minus-icon hidden group-[.open]:block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6" />
                  </svg>
                </span>
              </dt>
              <dd class="mt-2 pr-12 max-h-0 overflow-hidden transition-all duration-300 ease-in-out text-base text-gray-600">
                <p>{faq.answer}</p>
              </dd>
            </button>
          </div>
        ))}
      </dl>
    </div>
  </div>
</div>

<script>
  const faqList = document.getElementById('faq-list');
  faqList.querySelectorAll('button').forEach((btn, idx) => {
    btn.addEventListener('click', () => {
      faqList.querySelectorAll('button').forEach((otherBtn, otherIdx) => {
        const isSame = idx === otherIdx;
        const dd = otherBtn.querySelector('dd');
        const plus = otherBtn.querySelector('.plus-icon');
        const minus = otherBtn.querySelector('.minus-icon');

        if (isSame) {
          const open = dd.style.maxHeight && dd.style.maxHeight !== '0px';
          dd.style.maxHeight = open ? '0px' : dd.scrollHeight + 'px';
          plus.classList.toggle('hidden', !open);
          minus.classList.toggle('hidden', open);
        } else {
          dd.style.maxHeight = '0px';
          plus.classList.remove('hidden');
          minus.classList.add('hidden');
        }
      });
    });
  });
</script>
