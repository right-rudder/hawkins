---
import HomeLayout from "../layouts/HomeLayout.astro"
import { SITE_TITLE, SITE_DESCRIPTION, KEYWORDS } from "../consts";
import Hero from "../components/Hero.astro";
import Bento2Row from "../components/Bento2Row.astro";
import CTAGlass from "../components/CTAGlass.astro";
import FeaturesCenterGrid from "../components/FeaturesCenterGrid.astro";
import AboutSec from "../components/AboutSec.astro";
import Enroll from "../components/Enroll.astro";
import FAQs from "../components/FAQs.astro";
import CTASplitImage from "../components/CTASplitImage.astro";

const faqs = {
  title: "Frequently Asked Questions",
  questions: [
    {
      question: "Where is Hawkins Flight Academy located?",
      answer: "We operate out of two locations: Shelbyville, TN (KSYI) and Tupelo, MS (KTUP). Both locations offer modern training fleets and full-time instruction."
    },
    {
      question: "What type of aircraft do you use for training?",
      answer: "Our fleet includes RV-12s with Garmin G3X glass cockpits, a Piper Cherokee 140, a Vector Harmony, and a Cessna 172. All aircraft are maintained to the highest safety standards."
    },
    {
      question: "Do you offer accelerated programs?",
      answer: "Yes. We specialize in fast-track training for career pilots, with personalized scheduling to help you move from zero experience to CFI as efficiently as possible."
    },
    {
      question: "How does your pricing work?",
      answer: "We offer program-based pricing on our RV-12s—no hourly rental required. This helps keep training costs predictable and affordable for students."
    },
    {
      question: "Is financing available?",
      answer: "Yes, we work with trusted aviation finance providers to offer flexible financing options for eligible students."
    },
    {
      question: "Can I schedule a discovery flight?",
      answer: "Absolutely. A discovery flight is the best way to experience what it’s like to train at Hawkins. Contact us to book one at either location."
    },
    {
      question: "Do you train full-time and part-time students?",
      answer: "Yes. Whether you're training on weekends or pursuing an accelerated full-time program, our instructors will tailor your schedule to meet your goals."
    }
  ]
}
---

<HomeLayout
	siteTitle={SITE_TITLE}
	siteDescription={SITE_DESCRIPTION}
	keywords={KEYWORDS}
	class="bg-white text-black"
>
	<Hero />
	<div id="new-to-flying"></div>
	<Bento2Row />
	<div id="programs"></div>
	<CTAGlass />
	<div id="features"></div>
	<FeaturesCenterGrid />
	<div id="about"></div>
	<AboutSec />
	<div id="enroll-now" class="scroll-my-20 lg:scroll-my-28"></div>
	<Enroll />
	<FAQs pageContent={faqs}/>
	<CTASplitImage />
</HomeLayout>